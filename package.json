{
  "name": "code-assistant-claude",
  "version": "0.1.0",
  "description": "Intelligent self-configuring framework for Claude Code CLI optimization with 98.7% token reduction",
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "ai",
    "optimization",
    "mcp",
    "skills",
    "automation",
    "developer-tools",
    "typescript"
  ],
  "homepage": "https://github.com/YOUR_USERNAME/code-assistant-claude#readme",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/code-assistant-claude/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/code-assistant-claude.git"
  },
  "license": "MIT",
  "author": "Your Name <your.email@example.com>",
  "main": "dist/index.js",
  "bin": {
    "code-assistant-claude": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:load": "jest --config jest.load.config.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:production": "npm audit --production --audit-level=high",
    "check:deps": "npm outdated",
    "check:licenses": "license-checker --summary",
    "benchmark": "vitest run tests/performance --reporter=verbose",
    "benchmark:token-reduction": "vitest run tests/performance/token-reduction.bench.ts --reporter=verbose",
    "benchmark:performance": "vitest run tests/performance/benchmarks.test.ts --reporter=verbose",
    "prepublishOnly": "npm run lint && npm run typecheck && npm test && npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "async-lock": "^1.4.0",
    "better-sqlite3": "^9.2.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "compromise": "^14.11.0",
    "dockerode": "^4.0.2",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.5",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.1.0",
    "memoizee": "^0.4.15",
    "natural": "^6.10.0",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1",
    "p-limit": "^3.1.0",
    "tar-stream": "^3.1.6",
    "tiktoken": "^1.0.10",
    "vm2": "^3.9.19",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/async-lock": "^1.4.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/dockerode": "^3.3.23",
    "@types/glob": "^8.1.0",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/memoizee": "^0.4.11",
    "@types/node": "^18.19.3",
    "@types/node-fetch": "^2.6.9",
    "@types/tar-stream": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^13.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
